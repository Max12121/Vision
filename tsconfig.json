{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "build",
        "incremental": true,
        "sourceMap": true,
        "inlineSources": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules"
    ]
}